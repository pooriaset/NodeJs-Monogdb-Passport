<h1>Edit User : <%= user.username %></h1>
<a href="/users" class="btn btn-info">
    Return to list
</a>
<hr>
<form action="/users/<%= user.id %>?_method=PUT" method="post">
    <div class="form-group">
        <input type="hidden" class="form-control" value="<%= user.id %>" placeholder="Id" name="id" />
    </div>
    <div class="form-group">
        <input type="text" class="form-control" value="<%= user.username %>" placeholder="username" name="firstname" />
    </div>
    <div class="form-group">
        <input type="text" class="form-control" value="<%= user.password %>" placeholder="password" name="lastname" />
    </div>
    <div class="form-group">
        <input type="submit" class="btn btn-success" />
    </div>
</form>