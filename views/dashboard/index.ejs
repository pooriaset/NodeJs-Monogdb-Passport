    <%- include('../../components/errorsValidator.ejs') -%>

        <h1>
            Hello , <%= user.username %>
        </h1>
        <img src="/images/users/<%= user.image %> " alt="image" height="256" />
        <hr>
        <form action="/dashboard/editprofile" method="POST" enctype="multipart/form-data">
            <div class="form-group">
                <input type="file" name="file" />
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-success" value="ذخیره تصویر" />
            </div>
        </form>

        <hr>

        <h2>شارژ حساب</h2>
        <h3 class="text-success">موجودی <%= user.balance %> تومان</h3>
        <form  action="/dashboard/pay" method="POST">
            <div class="form-group">
                <input type="number" name="amount" value="1000" placeholder="مقدار شارژ" />
            </div>
            <div class="form-group">
                <input type="submit" class="btn btn-warning" value="پرداخت" />
            </div>
        </form>

        <hr>

        <a href="/logout" class="btn btn-danger">
            Logout
        </a>

